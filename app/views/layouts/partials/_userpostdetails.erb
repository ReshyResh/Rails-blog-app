<% if Post.exists?(id: params["id"]) %>
<% post = Post.find_by(id: params["id"]) %>
    <div class="user-div">
        <div style="display:flex;flex-flow:column;">
            <h2> <%= post.title %> </h2><p class="user-posts" style="display:inline-flex;"> Likes:<%= post.likes_counter %><br>Comments:<%= post.get_number_of_comments(post.id) %> </p>
            <h3> <%= post.text%> </h3>
        </div>
    </div>
    <div class="comments">
        <h2> Comments </h2>
            <% comments = post.recent_comments(post.id) %>
            <% comments.each do |comment| %>
                <h3> <%= comment.get_author_name(comment.user_id) %> : <%= comment.text %></h3>
            <% end %>
        </div>
<% end %>