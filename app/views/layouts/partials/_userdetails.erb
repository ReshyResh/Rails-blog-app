<% if User.exists?(id: params["id"]) %>
<% user = User.find_by(id: params["id"]) %>
<% user_posts = user.show_posts(params["id"]) %>
<div class="user-div">
    <img class = "user-image" alt='alt image for <%= user.name %>' />
    <h2> <%= user.name %> </h2>
    <p class="user-posts"> User posts:<%= user.posts_counter %> </p>
</div>
<div class="user-div">
    <p> <%= user.bio %> </p>
</div>
<% user_posts.each do |post| %>
    <div class="user-div">
        <div style="display:flex;flex-flow:column;">
            <h2> <%= post.title %> </h2><br>
            <h3> <%= post.text %> </h3>
        </div>
        <p class="user-posts"> Likes:<%= post.likes_counter %><br>Comments:<%= post.comments_counter %> </p>
    </div>
<% end %>
<% end %>